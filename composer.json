{
    "name": "psop/palestine-science-olympiad-portal",
    "description": "Palestine Science Olympiad Portal - A national system to manage international science olympiad competitions",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "zircote/swagger-php": "^5.7",
        "doctrine/annotations": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); echo 'Created .env file from .env.example\\n'; }\""
        ]
    }
}
